<FrameLayout
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.shivr.e_commerce.UI.view_product_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">


            <TextView
                android:id="@+id/textViewProdName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title: Headphones"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textViewProdName"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imageViewSingleProd"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewProdName"
                app:srcCompat="@drawable/cart"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="165dp"
                fresco:placeholderImage="@drawable/cart"
                />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/imageViewSingleProd"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/view"
                android:numStars="5"
                android:rating="3.5"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/textViewProdDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. "
                android:textAlignment="center"
                android:layout_below="@+id/textViewProdPrice"
                android:layout_alignParentStart="true" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textViewProdDesc"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ratingBar"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textViewProdPrice"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Price: $50.00"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold"
                android:layout_below="@+id/view4"
                android:layout_alignParentStart="true" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:foregroundGravity="center"
                android:src="@drawable/addcart"
                app:backgroundTint="@color/Tomato"
                android:layout_below="@+id/view3"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:id="@+id/RatingHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Rating"
                android:textSize="18sp"
                android:layout_below="@+id/view"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp"
                android:layout_toStartOf="@+id/ratingBar" />


        </RelativeLayout>

    </ScrollView>

</FrameLayout>
