<FrameLayout
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.shivr.e_commerce.UI.view_product_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="5dp"
            fresco:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textViewProdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title: Headphones"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imageViewSingleProd"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/cart"
                    fresco:placeholderImage="@drawable/cart"
                    tools:layout_editor_absoluteX="3dp"
                    tools:layout_editor_absoluteY="165dp"
                    android:layout_below="@+id/textViewProdPrice"
                    android:layout_alignParentStart="true" />

                <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textViewProdDesc"
                android:layout_above="@+id/ratingBar"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.5"
                    android:layout_below="@+id/textViewProdDesc"
                    android:layout_alignParentEnd="true" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/textViewProdPrice"
                    android:layout_below="@+id/textViewProdName"
                    android:background="@android:color/darker_gray" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/textViewProdDesc"
                    android:layout_below="@+id/imageViewProduct"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/RatingHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:text="Average Rating"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_below="@+id/textViewProdDesc"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/ratingBar" />

                <TextView
                    android:id="@+id/textViewProdDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:paddingTop="3dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. "
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_below="@+id/imageViewSingleProd"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textViewProdPrice"
                    android:layout_width="match_parent"
                    android:paddingTop="5dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/textViewProdName"
                    android:text="Price: $50.00"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="18sp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</FrameLayout>
